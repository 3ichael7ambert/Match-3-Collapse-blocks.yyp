/// @description glr_occlusion_get_active(id);
/// @param id
function glr_occlusion_get_active(argument0) {

	/*
	    <=============== DESCRIPTION ===============>
	        Returns true if the occlusion sprite
	        is Active
	    <===========================================>
	*/

	var l = argument0;
	return l[| GLR_OCCLUSION.active];



}
