/// @description glr_shadowsprite_get_layer(id, layer)
/// @param id
/// @param  layer
function glr_shadowsprite_get_layer(argument0) {

	/*
	    <=============== DESCRIPTION ===============>
	        returns the shadowsprite layer
	    <===========================================>
	*/

	var l = argument0;
	return l[| GLR_SHADOWSPRITE.layer];



}
