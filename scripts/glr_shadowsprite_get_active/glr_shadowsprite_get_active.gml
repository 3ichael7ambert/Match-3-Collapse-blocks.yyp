/// @description glr_shadowsprite_get_active(id)
/// @param id
function glr_shadowsprite_get_active(argument0) {

	/*
	    <=============== DESCRIPTION ===============>
	        returns true if the shadowsprite is active
	    <===========================================>
	*/

	var l = argument0;
	return l[| GLR_SHADOWSPRITE.active];



}
